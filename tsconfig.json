{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
	  "@utils/*": ["src/utils/*"],
	  "@modules/*": ["src/modules/*"],
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}